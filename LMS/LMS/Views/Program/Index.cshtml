@model IEnumerable<LMS.Models.ProgramViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admins_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdmissionStart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdmissionEnd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClassesStart)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdmissionStart)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdmissionEnd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClassesStart)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProgramId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProgramId })
        </td>
    </tr>
}

</table>
