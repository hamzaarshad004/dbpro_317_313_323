@model IEnumerable<LMS.Models.ExamSubjectsViewModel>

@{
    ViewBag.Title = "DateSheetIndex";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<h2>DateSheetIndex</h2>

<p>
    @Html.ActionLink("Create New", "AddDateSheet", new { id = ViewBag.ExamId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ExamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubjectName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.TotalMarks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ExamName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubjectName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalMarks)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndTime)
        </td>

        <td>
            @Html.ActionLink("Edit", "EditDateSheet", new { ExamId = item.ExamId, SubjectId = item.SubjectId }) |
            @Html.ActionLink("Delete", "DeleteDateSheet", new { ExamId = item.ExamId, SubjectId = item.SubjectId })
        </td>
    </tr>
}

</table>
