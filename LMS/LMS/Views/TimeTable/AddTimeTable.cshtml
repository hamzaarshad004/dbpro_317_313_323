                @Html.DropDownListFor(model => model.SectionId, new SelectList(Model.allSection, "SectionId", "SectionName"), "Select Section", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SectionId, "", new { @class = "text-danger" })
            </div>
        </div>

