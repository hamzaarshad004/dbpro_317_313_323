@model LMS.Models.TimeTableViewModel

@{
    ViewBag.Title = "AddTimeTable";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<h2>AddTimeTable</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
